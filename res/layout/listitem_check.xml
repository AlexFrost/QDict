<?xml version="1.0" encoding="utf-8"?>
<com.mmt.widget.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_height"
    android:background="@drawable/ic_item_background"
    android:orientation="horizontal" >

    <ImageView
        android:id="@id/drag_handle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@drawable/drag"
        android:contentDescription="@string/app_name" />

    <CheckedTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:maxLines="2"
        android:textColor="@color/mmt_white"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</com.mmt.widget.CheckableLinearLayout>